<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/btnTakeAPhoto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="@string/btn_take_struct"
                    android:background="@color/grey"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_marginBottom="18dp" />

                <ImageView
                    android:id="@+id/imgTakeAPhoto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:visibility="gone"/>
            </FrameLayout>

            <EditText
                android:id="@+id/edtStruckNumber"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:fontFamily="sans"
                android:hint="@string/edt_struc_number"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <RelativeLayout
                    android:id="@+id/btnDate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.5"
                    android:background="@color/btnGreen"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_toLeftOf="@+id/imgDate"
                        android:text="date"/>

                    <ImageView
                        android:id="@+id/imgDate"
                        android:layout_width="@dimen/item_arrow_size"
                        android:layout_height="@dimen/item_arrow_size"
                        android:background="@drawable/arrow_down"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnTime"
                    android:layout_width="106dp"
                    android:layout_height="50dp"
                    android:background="@color/btnGreen"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_toLeftOf="@+id/imgTime"
                        android:text="time"/>

                    <ImageView
                        android:id="@+id/imgTime"
                        android:layout_width="@dimen/item_arrow_size"
                        android:layout_height="@dimen/item_arrow_size"
                        android:background="@drawable/arrow_down"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentProdukType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/txt_note_upload_struct"
                android:textSize="13dp"
                android:textColor="@color/fontPointReward"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnCheckForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_yellow"
                android:textColor="@color/fontPointReward"
                android:text="@string/btn_check_form"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>